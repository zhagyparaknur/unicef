<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <ImageButton
        android:id="@+id/go_pr_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covid_rectangle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />


    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">
    <androidx.cardview.widget.CardView
        android:id="@+id/zero_four"
        android:layout_width="300dp"
        android:layout_marginTop="50dp"
        android:layout_height="85dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="12.5dp"
            android:layout_height="11.47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favorite" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/zerofourbaby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="0-4 месяца"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_marginTop="150dp"
        android:layout_height="85dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="12.5dp"
            android:layout_height="11.47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favorite" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/foursixbaby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="4-6 месяцев"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_marginTop="250dp"
        android:layout_height="85dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="12.5dp"
            android:layout_height="11.47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favorite" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/sixtwo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="6-12 месяцев"
                android:textSize="12dp"
                android:textStyle="bold"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_marginTop="350dp"
        android:layout_height="85dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="12.5dp"
            android:layout_height="11.47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favorite" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/twoybaby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="12 мес - 2года"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_marginTop="450dp"
        android:layout_height="85dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView

            android:layout_width="12.5dp"
            android:layout_height="11.47dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="65dp"
            android:background="@android:color/transparent"
            android:src="@drawable/favorite" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="3-6 лет"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </RelativeLayout>

</RelativeLayout>