<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".SupportActivity">

    <ImageButton
        android:id="@+id/go_pr_page2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covid_rectangle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="83dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/grandmapa" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">


        <EditText
            android:id="@+id/inputEmail"
            android:layout_width="300dp"
            android:layout_height="34dp"
            android:layout_marginTop="321dp"
            android:background="@drawable/home_round_border"
            android:drawablePadding="@dimen/edit_text_padding"
            android:hint="Ищите тему которые вас интересуют?"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:textSize="9dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="278dp">
    <TextView
        android:id="@+id/topText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="28dp"
        android:text="Сколько лет/месяцев вашему малышу?"
        android:textColor="@color/colorPrimary"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp">



        <Button
            android:id="@+id/go_second_survey"
            android:layout_width="107dp"
            android:layout_height="32dp"
            android:layout_marginLeft="225dp"
            android:background="@drawable/button_bg"
            android:text="Далее"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signin_buttontext_size"
            android:textAllCaps="false"
            android:textStyle="normal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/go_home_fsurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/calendar_homep" />

        <ImageButton
            android:id="@+id/go_notification_fsurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification" />

        <ImageButton
            android:id="@+id/go_hospital_fsurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/hospital" />

        <ImageButton
            android:id="@+id/go_liked_fsurvey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/like" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/person_icon" />
    </RelativeLayout>
</RelativeLayout>