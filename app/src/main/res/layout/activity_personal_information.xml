<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".PersonalInformationActivity">


    <ImageView
        android:id="@+id/personal_information"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/rada" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Можете дать дополнительную"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/secondText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="информацию о себе"
            android:textColor="@color/colorPrimary"
            android:textSize="13dp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">


        <EditText
            android:id="@+id/input_city"
            android:layout_width="@dimen/edit_text_width_size"
            android:layout_height="@dimen/edit_text_height_size"
            android:layout_marginLeft="@dimen/signin_margin_left"
            android:background="@drawable/round_border"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="@dimen/edit_text_padding"
            android:hint="Ваш город"
            android:padding="@dimen/edit_text_padding"
            android:textSize="@dimen/edit_text_size"/>

        <EditText
            android:id="@+id/input_address"
            android:layout_width="@dimen/edit_text_width_size"
            android:layout_height="@dimen/edit_text_height_size"
            android:layout_marginLeft="@dimen/signin_margin_left"
            android:layout_marginTop="@dimen/personal_information_edit_margin"
            android:layout_marginRight="@dimen/signin_margib_right"
            android:background="@drawable/round_border"
            android:drawablePadding="@dimen/edit_text_padding"
            android:hint="Адрес прописки"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:textSize="@dimen/edit_text_size"/>

        <EditText
            android:id="@+id/input_hospital"
            android:layout_width="@dimen/edit_text_width_size"
            android:layout_height="@dimen/edit_text_height_size"
            android:layout_marginLeft="@dimen/signin_margin_left"
            android:layout_marginTop="@dimen/personal_information_edit_margin"
            android:layout_marginRight="@dimen/signin_margib_right"
            android:background="@drawable/round_border"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="@dimen/edit_text_padding"
            android:hint="Ваша поликлиника"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:textSize="@dimen/edit_text_size"/>


        <EditText
            android:id="@+id/input_position"
            android:layout_width="@dimen/edit_text_width_size"
            android:layout_height="@dimen/edit_text_height_size"
            android:layout_marginLeft="@dimen/signin_margin_left"
            android:layout_marginTop="@dimen/personal_information_edit_margin"
            android:layout_marginRight="@dimen/signin_margib_right"
            android:background="@drawable/round_border"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="@dimen/edit_text_padding"
            android:ems="10"
            android:hint="Вы в положений?"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:textSize="@dimen/edit_text_size" />
        <EditText
            android:id="@+id/input_term"
            android:layout_width="@dimen/edit_text_width_size"
            android:layout_height="@dimen/edit_text_height_size"
            android:layout_marginLeft="@dimen/signin_margin_left"
            android:layout_marginTop="@dimen/personal_information_edit_margin"
            android:layout_marginRight="@dimen/signin_margib_right"
            android:background="@drawable/round_border"
            android:drawableRight="@drawable/arrow_down"
            android:drawablePadding="@dimen/edit_text_padding"
            android:ems="10"
            android:hint="Какой ваш срок"
            android:inputType="textEmailAddress"
            android:padding="@dimen/edit_text_padding"
            android:textSize="@dimen/edit_text_size"/>

    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="525dp">



        <Button
            android:id="@+id/p_next_button"
            android:layout_width="107dp"
            android:layout_height="32dp"
            android:layout_marginLeft="225dp"
            android:background="@drawable/button_bg"
            android:text="Далее"
            android:textColor="@android:color/white"
            android:textSize="@dimen/signin_buttontext_size"
            android:textAllCaps="false"
            android:textStyle="normal"
            />

    </RelativeLayout>


</RelativeLayout>



