<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdviceActivity">

    <ImageButton
        android:id="@+id/go_pr_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covid_rectangle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        >
    <androidx.cardview.widget.CardView
        android:id="@+id/go_emotion_article"
        android:layout_width="98dp"
        android:layout_height="104dp"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="87dp"

       >

        <ImageView
            android:id="@+id/go_open_blogp"
            android:layout_width="55dp"
            android:layout_height="43dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/emotion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            android:text="Эмоций"
            android:textSize="12dp"
            android:textStyle="normal"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/go_community_article"
        android:layout_width="98dp"
        android:layout_height="104dp"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="250dp"

        >


        <ImageView

            android:layout_width="55dp"
            android:layout_height="43dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/community" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            android:text="Эмоций"
            android:textSize="12dp"
            android:textStyle="normal"/>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/go_paly_article"
        android:layout_width="98dp"
        android:layout_height="104dp"
        tools:ignore="MissingConstraints"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="87dp"
        android:layout_marginLeft="188dp"
        >


        <ImageView

            android:layout_width="55dp"
            android:layout_height="43dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/puzzle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            android:text="Эмоций"
            android:textSize="12dp"
            android:textStyle="normal"/>

    </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/go_home_fadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/go_calendar_fadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/calendar_homep" />

        <ImageButton
            android:id="@+id/go_notification_fadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/notification" />

        <ImageButton

            android:id="@+id/go_hospital_fadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/hospital" />

        <ImageButton
            android:id="@+id/go_liked_fadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/like" />

        <ImageButton
            android:id="@+id/go_profile_fadvice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="70dp"
            android:background="@android:color/transparent"
            android:src="@drawable/person_icon" />
    </RelativeLayout>



</RelativeLayout>