<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding"
    tools:context=".SupportActivity">

    <ImageButton
        android:id="@+id/go_pr_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/covid_rectangle"
        android:background="@android:color/transparent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        />


    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginTop="83dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/father_baby" />



    <androidx.cardview.widget.CardView
        android:id="@+id/go_child_listp"
        android:layout_width="300dp"
        android:layout_height="85dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="30dp"
        tools:ignore="MissingConstraints"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="@android:color/transparent"
        >

        <ImageView
            android:id="@+id/child_bac_image"
            android:layout_width="104dp"
            android:layout_height="90dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/hrec3" />

        <ImageView

            android:layout_width="104dp"
            android:layout_height="84dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/baby" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:orientation="vertical">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="Карта поддержки"
                android:textSize="12dp"
                android:textStyle="bold"
                />


        </LinearLayout>
    </androidx.cardview.widget.CardView>





</RelativeLayout>